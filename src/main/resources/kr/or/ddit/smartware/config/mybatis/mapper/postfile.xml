<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="postfile">
	<insert id="insertPostFile" parameterType="postfile">
		insert into postfile(file_id, file_nm, realfilepath, post_id)
    		values(post_file_seq.nextval, #{file_nm}, #{realfilepath}, #{post_id})
	</insert>

	<select id="getPostFile" parameterType="int" resultType="postfile">
		select *
		  from postfile
		 where post_id = #{post_id}
	</select>
	
	<delete id="deletePostFile" parameterType="int">
		delete from postfile where file_id=#{file_id}
	</delete>
	
	<select id="selectPostFile" parameterType="int" resultType="postfile">
		select * from postfile where file_id=#{file_id} 
	</select>
</mapper>