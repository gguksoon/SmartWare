<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
	
<tiles-definitions>
	<definition name="base" template="/WEB-INF/views/commonJsp/base.jsp">
		<put-attribute name="basicLib" 	value="/WEB-INF/views/commonJsp/basicLib.jsp"/>
		<put-attribute name="header" 	value="/WEB-INF/views/commonJsp/header.jsp"/>
		<put-attribute name="content" 	value=""/>
		<put-attribute name="left" 		value="/WEB-INF/views/commonJsp/left.jsp"/>
		<put-attribute name="footer" 	value="/WEB-INF/views/commonJsp/footer.jsp"/>
	</definition>
	
	<!-- 임시 메인 페이지(form/useForm) -->
	<definition name="tiles.useForm" extends="base">
		<put-attribute name="content"	value="/WEB-INF/views/form/useForm.jsp"/>
	</definition>
	
	<!-- 테스트 페이지 -->
	<definition name="tiles.employeeList" extends="base">
		<put-attribute name="content"	value="/WEB-INF/views/employee/employeeList.jsp"/>
	</definition>
	
	<!-- 로그인 -->
	<definition name="tiles.login" extends="base">
		<put-attribute name="content"	value="/WEB-INF/views/login/login.jsp"/>
	</definition>
	
	<!-- 임시 메인 화면 -->
	<definition name="tiles.index" extends="base">
		<put-attribute name="content"	value="/WEB-INF/views/index.jsp"/>
	</definition>
	
	<!-- 메뉴 및 게시판 관리 -->
	<definition name="tiles.addBoard" extends="base">
		<put-attribute name="content"	value="/WEB-INF/views/board/addBoard.jsp"/>
	</definition>
	
	<!-- 일정 관리 -->
	<definition name="tiles.calendar" extends="base">
		<put-attribute name="content"	value="/WEB-INF/views/calendar/calendar.jsp"/>
	</definition>
</tiles-definitions>